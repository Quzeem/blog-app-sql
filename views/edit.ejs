<%- include ('./partials/header') %>
<div class="ui main text container segment">
    <h2 class="ui huge header">Edit <%= blog.title%></h2>
    <!-- send to update route -->
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
      <div class="field">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= blog.title%>" id="title">
      </div>
      <div class="field">
        <label for="image">Image</label>
        <input type="text" name="image" value="<%= blog.image%>" id="image">
      </div>
      <div class="field">
        <label for="body">Blog Content</label>
        <textarea name="body" id="body"><%= blog.body %></textarea>
      </div>
      <input class="ui big secondary button" type="submit" value="Submit">
    </form>
  </div>
<%- include ('./partials/header') %>