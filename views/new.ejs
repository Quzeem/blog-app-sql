<%- include ('./partials/header') %>
  <div class="ui main text container segment">
    <h2 class="ui huge header">New Blog</h2>
    <form class="ui form" action="/blogs" method="POST">
      <div class="field">
        <label for="title">Title</label>
        <input type="text" name="title", placeholder="title" id="title">
      </div>
      <div class="field">
        <label for="image">Image</label>
        <input type="text" name="image", placeholder="image" id="image">
      </div>
      <div class="field">
        <label for="body">Blog Content</label>
        <textarea name="body", placeholder="blog content goes here" id="body"></textarea>
      </div>
      <input class="ui big secondary button" type="submit" value="Post">
    </form>
  </div>
